<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj70"
    tools:context="com.example.lixiang.softlogin.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/good1">
        <Button
            android:id="@+id/buttonforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#00aabbcc"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewHead"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tx1"
            android:layout_marginLeft="5dp"
            />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/userName"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:maxLines="1"
                    android:hint="账号"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="10dp"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/passWord"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:hint="密码"
                    android:background="@drawable/bg_edittext"
                    android:textCursorDrawable="@null"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remberPassword"
            android:text="记住密码"
            android:textSize="15sp"
            android:layout_alignTop="@+id/loginByself"
            android:layout_marginLeft="20dp"
            android:layout_alignStart="@+id/buttonLogin" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginByself"
            android:text="自动登录"
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/buttonQuit"
            android:layout_alignEnd="@+id/buttonQuit"
            android:layout_marginBottom="26dp" />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="登录"
            android:textSize="25sp"
            android:id="@+id/buttonLogin"
            android:background="@drawable/mybutton"
            android:layout_alignTop="@+id/buttonQuit"
            android:layout_toStartOf="@+id/buttonRegister" />
        <Button
            android:id="@+id/buttonQuit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="退出"
            android:textSize="25sp"
            android:background="@drawable/mybutton"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/buttonRegister" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:id="@+id/buttonRegister"
            android:background="#00bbccdd"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
