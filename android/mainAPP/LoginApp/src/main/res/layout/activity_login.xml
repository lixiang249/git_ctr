<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj6"
    tools:context="com.example.lixiang.softlogin.LoginActivity">

    <Button
        android:id="@+id/quitAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销"
        android:background="#00000000"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/appInformationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息"
        android:gravity="top|right"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Compass"
        android:textSize="20sp"
        android:background="@drawable/chbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Rainbow"
        android:background="@drawable/chbutton"
        android:textSize="20sp"
        android:layout_alignTop="@+id/button1"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Acdsee"
        android:background="@drawable/chbutton"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button5" />
    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:background="@drawable/chbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp" />
    <Button
        android:id="@+id/button5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="MusicPlayer"
        android:layout_below="@+id/button1"
        android:background="@drawable/chbutton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/button3"
        android:layout_alignEnd="@+id/button5"
        android:layout_marginTop="113dp" />
</RelativeLayout>
